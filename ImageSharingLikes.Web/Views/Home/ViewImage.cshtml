@using ImageSharingLikes.Data
@model Image

<div class="row">
    <input type="hidden" id="image-id" value="@Model.Id" />
    <div class="col-md-10 offset-md-1 bg-light p-4 rounded shadow">
        <h1>@Model.Name</h1>
        <img src="/images/@Model.FilePath" style="width: 900px;" />
        <br />
        <br />
        <button id="like-button" class="btn btn-primary btn-lg">LIKE</button>Current Likes: <span id="likes-count">@Model.Likes</span>
    </div>
</div>

@section Scripts {
    <script src="/js/viewimage.js"></script>
}
